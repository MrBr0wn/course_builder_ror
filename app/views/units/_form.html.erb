<div class="box">
  <%= form_with(model: [@course, @unit]) do |form| %>
    <% if @unit.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

        <ul>
          <% @unit.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, 'Title', class: 'label' %>
      <div class="control">
        <%= form.text_field :name, class: 'input', placeholder: 'Input Title' %>
      </div>
    </div>
    <div class="field">
      <%= form.label :body, 'Body', class: 'label' %>
      <div class="control">
        <%= form.text_area :body, class: 'textarea', placeholder: 'Input Body' %>
      </div>
    </div>
    <div class="field">
      <%= form.label :position, 'Position', class: 'label' %>
      <div class="control">
        <%= form.text_field :position, class: 'input', placeholder: 'Input Position' %>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%= form.submit 'Create', class: 'button is-link' %>
      </div>
      <div class="control">
        <%= link_to "Cancel", course_path(@course), class: 'button is-link is-light' %>
      </div>
    </div>
  <% end %>
</div>